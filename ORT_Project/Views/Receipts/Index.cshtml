@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Receipt_num)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Receipt_sum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Payment_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bank_branch_num)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employees.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Graduant.Sur_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.School1.School_name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ID_Raceipt }) |
