@model IEnumerable<ORT_Project.Models.Receipt>

@{
    ViewBag.Title = "Список квитанций";
}

<h2>Информация об оплате</h2>

<p>
    @Html.ActionLink("Добавить ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Receipt_num)*@
